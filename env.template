# =================================
# Ethos Horizons Website Environment Variables
# Copy this to .env.local and fill in your values
# =================================

# =================================
# REQUIRED - PUBLIC (Safe for client)
# =================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# =================================
# REQUIRED - SERVER ONLY (Never expose to client)
# =================================
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
REVALIDATION_SECRET=your_32_plus_character_revalidation_secret_here

# =================================
# OPTIONAL - Development vs Production
# =================================
NODE_ENV=development

# =================================
# OPTIONAL - Analytics & Monitoring
# =================================
ANALYTICS_WRITE_KEY=your_analytics_key_here

# =================================
# OPTIONAL - Rate Limiting (Production)
# =================================
UPSTASH_REDIS_URL=https://your-redis.upstash.io
UPSTASH_REDIS_TOKEN=your_redis_token_here

# =================================
# SECURITY NOTES
# =================================
# - Never commit real values to git
# - SUPABASE_SERVICE_ROLE_KEY bypasses RLS - server only!
# - REVALIDATION_SECRET should be 32+ random characters
# - In production, use secure random generators for secrets
# =================================
